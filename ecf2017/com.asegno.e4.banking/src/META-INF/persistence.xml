<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="banks" transaction-type="RESOURCE_LOCAL">
		<class>com.asegno.e4.banking.model.Bank</class>
		<class>com.asegno.e4.banking.model.Account</class>
		<class>com.asegno.e4.banking.model.Customer</class>
		<class>com.asegno.e4.banking.model.Transaction</class>
		<class>com.asegno.e4.banking.model.Charge</class>
		<class>com.asegno.e4.banking.model.Deposit</class>
		<class>com.asegno.e4.banking.model.Transfer</class>
		<class>com.asegno.e4.banking.model.Withdrawal</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:derby://localhost:1527/banking;create=true" />
			<property name="javax.persistence.jdbc.user" value="test" />
			<property name="javax.persistence.jdbc.password" value="test" />

			<!-- EclipseLink should create the database schema automatically -->
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />
		</properties>

	</persistence-unit>
</persistence>